{
    "parserOptions": {
        "ecmaVersion": 8,
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": true
        }
	},
	"extends": [
		"eslint:recommended",
    	"plugin:react/recommended"
	],
	"globals": {
		"console": true,
		"document": true,
		"fetch": true,
		"Headers": true,
		"history": true,
		"postMessage": true,
		"URLSearchParams": true,
		"window": true,
		"Worker": true
	},
    "rules": {
		"arrow-parens": 0,
		"no-unused-vars": 2,
		"react/display-name": 0,
		"react/no-children-prop": 0,
		"react/prop-types": 0,
        "semi": 0
	},
	"settings": {
		"react": {
			"version": "detect"
		}
	}
}